@page
@model RESTprojektLab_Frontend.Pages.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="text-center">
    <h1 class="display-4">Formularz rejestracji</h1>
</div>

<div class="container mt-4" style="max-width: 500px;">
    <form method="post">
        <div class="form-group">
            <label for="FirstName">Imię</label>
            <input asp-for="FirstName" class="form-control" id="FirstName" required />
        </div>

        <div class="form-group mt-2">
            <label for="LastName">Nazwisko</label>
            <input asp-for="LastName" class="form-control" id="LastName" required />
        </div>

        <div class="form-group mt-2">
            <label for="Login">Login</label>
            <input asp-for="Login" class="form-control" id="Login" required />
        </div>

        <div class="form-group mt-2">
            <label for="Password">Hasło</label>
            <input asp-for="Password" class="form-control" type="password" id="Password" required />
        </div>
        
        <div class="form-check mt-3">
            <label class="form-check-label" for="IsOver18">Mam ukończone 18 lat.</label>
            <input asp-for="IsOver18" class="form-check-input" id="IsOver18" required  />
        </div>

        <div class="form-check mt-3">
            <label class="form-check-label" for="AcceptsRegulations">Akceptuję regulamin.</label>
            <input asp-for="AcceptsRegulations" class="form-check-input" id="AcceptsRegulations" required />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Zatwierdź</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success mt-3">@Model.Message</div>
    }
</div>
