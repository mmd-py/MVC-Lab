@page "{userId:int}"
@model RESTprojektLab_Frontend.Pages.EditProfileModel
@{
    ViewData["Title"] = "Edytuj profil";
}

<h2>Edytuj profil</h2>

<div class="container mt-4" style="max-width: 500px;">
    <form method="post">
        <input type="hidden" asp-for="User.UserID" />
        <div class="form-group">
            <label>Imię</label>
            <input asp-for="User.FirstName" class="form-control" />
        </div>

        <div class="form-group mt-2">
            <label>Nazwisko</label>
            <input asp-for="User.LastName" class="form-control" />
        </div>

        <div class="form-group mt-2">
            <label>Login</label>
            <input asp-for="User.Login" class="form-control" />
        </div>

        <div class="form-group mt-2">
            <label>Hasło</label>
            <input asp-for="User.Password" class="form-control" type="password" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Zapisz zmiany</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3">@Model.Message</div>
    }

    <a asp-page="/Account" asp-route-userId="@Model.User.UserID" class="btn btn-secondary mt-3">Powrót</a>
</div>
